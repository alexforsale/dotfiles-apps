#!/bin/sh
# original script from https://wiki.archlinux.org/index.php/Dunst
# <alexforsale@yahoo.com>
# Arbitrary but unique message id
msgId="991049"

SINK=$(pactl list short sinks | sed -e 's,^\([0-9][0-9]*\)[^0-9].*,\1,' | head -n 1)

# Change the volume using alsa(might differ if you use pulseaudio)
#amixer -c 0 set Master "$@" > /dev/null
[ "$1" = "toggle" ] &&
    pactl set-sink-mute ${SINK} toggle

pactl set-sink-volume ${SINK} "$@" > /dev/null

# Query amixer for the current volume and whether or not the speaker is muted
#volume="$(amixer -c 0 get Master | tail -1 | awk '{print $4}' | sed 's/[^0-9]*//g')"
volume="$(pactl list sinks | grep '^[[:space:]]Volume:' | head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')"
#mute="$(amixer -c 0 get Master | tail -1 | awk '{print $6}' | sed 's/[^a-z]*//g')"
mute=$(pactl list sinks|grep '^[[:space:]]Mute'|head -n $(($SINK+1))| tail -n 1|sed 's/^[[:space:]]Mute\:[[:space:]]//')
#if [ "$volume" = "0" ] || [ "$mute" = "off" ]; then
if [ "$volume" = "0" ] || [ "$mute" = "no" ]; then
    # Show the sound muted notification
    dunstify -a "changeVolume" -u low -i audio-volume-muted -r "$msgId" "Volume muted"
else
    # Show the volume notification
    dunstify -a "changeVolume" -u low -i audio-volume-high -r "$msgId" \
    -h int:volume:value:"$volume" "ÔÄÅ: ${volume}%" -t 1000
fi

# Play the volume changed sound
canberra-gtk-play -i audio-volume-change -d "changeVolume"
